<process name="HelloWorld"
               targetNamespace="http://xmlns.oracle.com/SimpleHelloWorldWithEDNPublish/SimpleHelloWorldWithEDNPublish/HelloWorld"
               xmlns="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
               xmlns:client="http://xmlns.oracle.com/SimpleHelloWorldWithEDNPublish/SimpleHelloWorldWithEDNPublish/HelloWorld"
               xmlns:ora="http://schemas.oracle.com/xpath/extension"
               xmlns:ui="http://xmlns.oracle.com/soa/designer"
               xmlns:bpelx="http://schemas.oracle.com/bpel/extension"
         xmlns:bpel="http://docs.oasis-open.org/wsbpel/2.0/process/executable" xmlns:ns1="my.org/pr"
         xmlns:ns2="my.com/events"
         xmlns:xp20="http://www.oracle.com/XSL/Transform/java/oracle.tip.pc.services.functions.Xpath20"
         xmlns:bpws="http://schemas.xmlsoap.org/ws/2003/03/business-process/"
         xmlns:oraext="http://www.oracle.com/XSL/Transform/java/oracle.tip.pc.services.functions.ExtFunc"
         xmlns:dvm="http://www.oracle.com/XSL/Transform/java/oracle.tip.dvm.LookupValue"
         xmlns:hwf="http://xmlns.oracle.com/bpel/workflow/xpath"
         xmlns:ids="http://xmlns.oracle.com/bpel/services/IdentityService/xpath"
         xmlns:bpm="http://xmlns.oracle.com/bpmn20/extensions" xmlns:ess="http://xmlns.oracle.com/scheduler"
         xmlns:xdk="http://schemas.oracle.com/bpel/extension/xpath/function/xdk"
         xmlns:xref="http://www.oracle.com/XSL/Transform/java/oracle.tip.xref.xpath.XRefXPathFunctions"
         xmlns:ldap="http://schemas.oracle.com/xpath/extension/ldap">
  <import namespace="my.org/pr" location="../Schemas/HelloEvents.xsd" importType="http://www.w3.org/2001/XMLSchema"/>
  <import ui:processWSDL="true" namespace="http://xmlns.oracle.com/SimpleHelloWorldWithEDNPublish/SimpleHelloWorldWithEDNPublish/HelloWorld" location="../WSDLs/HelloWorld.wsdl" importType="http://schemas.xmlsoap.org/wsdl/"/>
    <!-- 
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
        PARTNERLINKS                                                      
        List of services participating in this BPEL process               
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    --> 
  <partnerLinks>
    <!-- 
      The 'client' role represents the requester of this service. It is 
      used for callback. The location and correlation information associated
      with the client role are automatically set using WS-Addressing.
    -->
    <partnerLink name="HelloWorldService" partnerLinkType="client:HelloWorld" myRole="HelloWorldProvider"/>
  </partnerLinks>

  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
      VARIABLES                                                        
      List of messages and XML documents used within this BPEL process 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <variables>
    <!-- Reference to the message passed as input during initiation -->
    <variable name="inputVariable" messageType="client:HelloWorldRequestMessage"/>

    <!-- Reference to the message that will be returned to the requester-->
    <variable name="outputVariable" messageType="client:HelloWorldResponseMessage"/>
    <variable name="Invoke1_InputVariable" element="ns1:HelloEvent"/>
  </variables>

  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
     ORCHESTRATION LOGIC                                               
     Set of activities coordinating the flow of messages across the    
     services integrated within this business process                  
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <sequence name="main">

    <!-- Receive input from requestor. (Note: This maps to operation defined in HelloWorld.wsdl) -->
    <receive name="receiveInput" partnerLink="HelloWorldService" portType="client:HelloWorld" operation="process" variable="inputVariable" createInstance="yes"/>
    <assign name="Assign1">
      <copy>
        <from>$inputVariable.payload/client:name</from>
        <to>$Invoke1_InputVariable/ns1:name</to>
      </copy>
      <copy>
        <from>$inputVariable.payload/client:category</from>
        <to>$Invoke1_InputVariable/ns1:category</to>
      </copy>
      <copy>
        <from>$inputVariable.payload/client:value</from>
        <to>$Invoke1_InputVariable/ns1:value</to>
      </copy>
      <copy>
        <from>xp20:current-dateTime()</from>
        <to>$Invoke1_InputVariable/ns1:timestamp</to>
      </copy>
    </assign>
    <invoke name="PublishHelloEvent" bpelx:invokeAsDetail="no" bpelx:eventName="ns2:HelloEvent"
            inputVariable="Invoke1_InputVariable"/>
    <assign name="Assign2">
      <copy>
        <from>concat('hello ',$inputVariable.payload/client:name)</from>
        <to>$outputVariable.payload/client:result</to>
      </copy>
    </assign>
    <!-- Generate reply to synchronous request -->
    <reply name="replyOutput" partnerLink="HelloWorldService" portType="client:HelloWorld" operation="process" variable="outputVariable"/>
  </sequence>
</process>